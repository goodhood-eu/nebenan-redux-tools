{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "allowJs": false,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "declarationMap": true,
    "outDir": "lib",
    "jsx": "preserve"
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "**/lib",
    "src/**/*.test.ts"
  ]
}
